<line sev="1"/>
<line sev="1">            add(runner);</line>
<line sev="1"/>
<line sev="1">            if (runner.getToolResultFile() != null)</line>
<line sev="1">            {</line>
<line sev="1">                if (config.isIncludeToolOutput())</line>
