<line covered="no">                StringBuffer relativePath = new StringBuffer(file.getName());</line>
<line covered="no">                File parent = null;</line>
<line/>
<line covered="no">                for (parent = file.getParentFile(); parent != null; parent = parent.getParentFile())</line>
<line>                {</line>
<line covered="no">                    if (sourceDirs.contains(parent))</line>
<line>                    {</line>
<line>                        // We've hit one of the top-level dirs, so copy using the relative path from this dir</line>
<line sev="0" covered="no"><diag id="690"/>                        File dest = new File(destDir, relativePath.toString());</line>
<line covered="no">                        FileUtil.copy(file, dest);</line>
<line covered="no">                        break;</line>
<line>                    }</line>
<line>                    else</line>
<line>                    {</line>
<line>                        // Prepend the parent directory name to the relative path</line>
<line covered="no">                        relativePath.insert(0, File.separatorChar);</line>
<line covered="no">                        relativePath.insert(0, parent.getName());</line>
<line>                    }</line>
<line>                }</line>
<line/>
<line>                // If we couldn't find a relative path, then just copy the file.</line>
<line covered="no">                if (parent == null)</line>
<line>                {</line>
<line covered="no">                    File dest = new File(destDir, file.getName());</line>
<line covered="no">                    FileUtil.copy(file, dest);</line>
<line>                }</line>
<line covered="no">            }</line>
<line>            else</line>
<line>            {                    </line>
<line covered="no">                String destPath = packageName.replace('.', File.separatorChar) + File.separatorChar + file.getName();</line>
<line covered="no">                File destFile = new File(destDir, destPath);</line>
<line/>
<line covered="no">                if (destFile.exists())</line>
<line>                {</line>
<line covered="no">                    String msg = &quot;Duplicate file, analysis may be innaccurate: &quot; + destPath;</line>
<line covered="no">                    QaLogger.getInstance().warn(msg); </line>
<line covered="no">                }</line>
<line>                else</line>
<line>                {</line>
<line covered="no">                    FileUtil.copy(file, destFile);</line>
<line>                }</line>
<line>            }</line>
<line>        }</line>
<line covered="no">        catch (IOException e)</line>
<line>        {</line>
<line covered="no">            throw new QAException(&quot;Failed to copy file&quot;, e);</line>
<line covered="no">        }           </line>
<line covered="no">    }</line>
<line>}</line>
